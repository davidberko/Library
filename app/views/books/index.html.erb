<h1>Welcome to the Library!</h1>

<h2>Books to Check Out</h2>

<div>
  <table>
    <thead>
      <tr>
        <th>
          Author
        </th>
        <th>
          Published
        </th>
        <th>
          Summary
        </th>
        <th>
          Available?
        </th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |b| %>
      <%= link_to "check out", new_book_checkout_path(b) %>
      <tr>
        <td>
          <%= b.author %>
        </td>
        <td>
          <%= b.published_at %>
        </td>
        <td>
          <%= b.synopsis %>
        </td>

        <td>
          <%= b.checked_out? %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
